<script src="/lib/jquery/dist/jquery.min.js"></script>
<script>
$(document).ready(function () {
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1;
    var yyyy = today.getFullYear();
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("vLicenseDiskExpiry").setAttribute("min", today);
    document.getElementById("vLastService").setAttribute("max", today);
    document.getElementById("vNextDateService").setAttribute("min", today);


            });</script>