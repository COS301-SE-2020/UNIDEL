@{
    ViewData["Title"] = "License Disk Renewal";
}

@using UniDelWebApplication.Models
@model Vehicle

<h1>License Disk Renewal</h1>

<!-- have to add mock data into database then will display the model Vehicle info-->

<form>
    <div class="form-group row">
        <label for="license_disk_expiry" class="col-sm-2 col-form-label">License Disk Expiry Date</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="license_disk_expiry" value=@Html.DisplayFor(m => m.VehicleLicenseDiskExpiry)>
        </div>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="checkbox">
        <label class="form-check-label" for="checkbox">Renew License Disk</label>
    </div>
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">New License Expiry Date</span>
        <input type="date" class="form-control" aria-label="New License Expiry Date" aria-describedby="inputGroup-sizing-sm">
    </div>
    <div>
        <button type="button" class="btn btn-light">Submit</button>
    </div>

</form>