<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniDelWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/vehicles.css" />
    <link rel="stylesheet" href="~/css/mystyle.css" />
    <script src="~/js/accountScript.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 font">
            <div class="container font">
                @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse font">*@
                <ul class="nav">
                    <li class="nav-item">
                        <a class="navbar-brand font text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/Logo.png" width="45" alt="" class="d-inline-block align-middle mr-2">UniDel</a>
                    </li>
                    @if (UniDelWebApplication.Controllers.AccountController.UserType == "CourierCompany")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark font border border-light" asp-area="" asp-controller="Account" asp-action="EmployeeReg">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font border border-light" asp-area="" asp-controller="FleetManagement" asp-action="Index">Fleet Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font border border-light" asp-area="" asp-controller="CallCentre" asp-action="Index">Deliveries</a>
                        </li>
                    }
                </ul>
                @*</div>
                <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">*@
            <ul class="nav justify-content-end">
                @if (UniDelWebApplication.Controllers.AccountController.UserType == null)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark float-right border border-dark font" asp-area="" asp-controller="Account" asp-action="Login">Sign in</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark float-right border border-dark font" asp-area="" asp-controller="Account" asp-action="Logout">Sign out</a>
                    </li>
                }
            </ul>
                @*</div>*@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - UniDelWebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
