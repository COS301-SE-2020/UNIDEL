@{
    ViewData["Title"] = "Log call";
}

<div class="text-center">
    <h1 class="display-4">Log Call</h1>
</div>

@using (Html.BeginForm("Log", "Call", FormMethod.Post))
{
    <label for="refNum">Caller Reference number:</label>
    <input type="text" id="refNum" name="refNum" placeholder="384FHG465"><br>
    <label for="reason">Reason for query:</label>
    <input type="text" list="reason" />
    <datalist id="reason">
      <option>Delivery not arrived</option>
      <option>Incorrect package</option>
      <option>Bad delivery time</option>
      <option>Damaged Goods</option>
    </datalist><br>
    <label for="callDateTime">Call date an time:</label>
    <input type="datetime-local" id="callDateTime" name="callDateTime"><br>
    <input type="submit" value="Log Call">
}