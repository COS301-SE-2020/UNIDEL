<body class="splash">
    <div class="container shadow p-3 mb-5 bg-white rounded">
        <div class="center">
            <div class="col-lg col-xl col-md col-lg">
                @if (ViewBag.Success)
                {
                    <p class="text-body">@Model</p>
                }
                else if (ViewBag.Error)
                {
                    <p class="text-body">@Model</p>
                }
                else
                {
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                    {
                        <div class="form-group Info">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required placeholder="Enter email">
                            <small id="emailErrorMsg" class="error-msg text-danger" hidden>Invalid Email Provided, please enter valid email address</small>
                        </div>

                        <input type="submit" class="btn btn-block blue greenblue" value="Change Password" />
                    }
                }
            </div>
        </div>
    </div>
</body>