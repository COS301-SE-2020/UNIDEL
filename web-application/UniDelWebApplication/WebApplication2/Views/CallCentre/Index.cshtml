@{
    ViewData["Title"] = "Deliveries";
}

<div class="text-center">
    <h1 class="display-4">Deliveries</h1>
</div>

@model dynamic
<div style="overflow-x:auto;">
    <table cellpadding="13" class="table table-bordered table-hover shadow p-2">
        <thead class="btn-primary whitefont">
            <tr>
                <th class="my-auto align-middle text-light">DeliveryID</th>
                <th class="my-auto align-middle text-light">DeliveryDate</th>
                <th class="my-auto align-middle text-light">DeliveryPickupLocation</th>
                <th class="my-auto align-middle text-light">DeliveryState</th>
                <th class="my-auto align-middle text-light">DeliveryPicture</th>
                <th class="my-auto align-middle text-light">DriverID</th>
                <th class="my-auto align-middle text-light">VehicleID</th>
                <th class="my-auto align-middle text-light">ClientID</th>
                <th class="my-auto align-middle text-light">CourierCompanyID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DeliveryID</td>
                    <td>@item.DeliveryDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.DeliveryPickupLocation</td>
                    <td>@item.DeliveryState</td>
                    <td>@item.DeliveryPicture</td>
                    <td>@item.DriverID</td>
                    <td>@item.VehicleID</td>
                    <td>@item.ClientID</td>
                    <td>@item.CourierCompanyID</td>
                    <td class="my-auto align-middle" cellpadding="8">
                        @using (Html.BeginForm("QRCode", "CallCentre", FormMethod.Post))
                        {
                            <input type="hidden" id="txtQRCode" name="txtQRCode" value="@item.DeliveryID">
                            <button class="btn btn-light" type="submit"><img src="~/images/qrcode-512.png" width="15" alt=""></button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>