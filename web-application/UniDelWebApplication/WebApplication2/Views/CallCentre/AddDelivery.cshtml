@{
    ViewData["Title"] = "Add Delivery";
}

<div class="text-center">
    <h1 class="display-4">Add Deliveries</h1>
</div>

@using (Html.BeginForm("Add", "CallCentre", FormMethod.Post))
{
    <label for="dDateTime">Delivery date and time:</label>
    <input type="datetime-local" id="dDateTime" name="dDateTime" required><br>
    <label for="pLocation">Pickup Location:</label>
    <input type="text" name="pLocation" list="pLocation" required/><br>
    <label for="dClient">Client:</label>
    <input type="number" name="dClient" list="dClient" required/><br>
    <input type="submit" value="Add Delivery">
}